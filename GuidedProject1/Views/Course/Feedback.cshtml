@model Candidate

<div>
    <h3 class="display-4">Tebrikler @Model.FullName</h3>
    <p class="lead">Başvurunuz başarıyla alınmıştır.</p>
    <p class="lead">İlginiz için teşekkürler.</p>
    <hr />
    <blockquote class="blockquote">
        @Model.SelectedCourse adlı kursa kaydoldunuz.
    </blockquote>
    <p class="text-muted">Başvuru zamanınız: @Model.ApplyAt</p>
    <div class="btn-group">
        <a class="btn btn-outline-success" asp-action="Index">Başvurular</a>
        <a class="btn btn-success" asp-controller="Home" asp-action="Index">Ana Sayfa</a>
    </div>
</div>