@model IEnumerable<Candidate>

@if (Model.Count() > 0)
{
	<h6 class="display-6">Başvurular(@Model.Count())</h6>
	<table class="table table-hover table-striped">
		<thead>
			<tr>
				<th>Email</th>
				<th>Ad Soyad</th>
				<th>Başvuru Zamanı</th>
				<th>Kurs</th>
			</tr>
		</thead>
		<tbody>
			@foreach(Candidate candidate in Model)
			{
				<tr>
					<td>@candidate.Email</td>
					<td>@candidate.FullName</td>
					<td>@candidate.ApplyAt</td>
					<td>@candidate.SelectedCourse</td>
				</tr>
			}
		</tbody>
	</table>
}
else 
{
	<div class="alert alert-info">
		Şu an bir başvuru yoktur. 
		Başvuru yapmak için <a class="alert-link" asp-action="Apply">tıklayın</a>.
	</div>
}